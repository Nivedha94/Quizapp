<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
</head>

<body>
  <header>
    <%- include('partials/nav') %>
  </header>
  <div class="quiz-card">
    <form action="/quiz/start/<%= quizzes.id %>" method="post">
      <h1 id="quiz-title-card">
        <%- quizzes.title %>
      </h1>
      <% quizzes.questions.forEach(function(quiz) { %>
        <div>
          <p id="quiz-q">
            <%- quiz.question %>
          </p>
          <% quiz.options.forEach(function(answer) { %>
            <!-- <label>
          <input type="radio" name="<%= quiz.id %>" value="<%= answer %>" /><%=
          answer %>
        </label> -->
            <div class="form-check">
              <input class="form-check-input" type="radio" name="<%= quiz.id %>" value="<%= answer %>">
              <label class="form-check-label" for="flexRadioDefault1">
                <%= answer %>
              </label>
            </div>
            <br />
            <% }) %>
        </div>
        <% }) %>
          <button type="submit" class="btn btn-warning">Submit</button>
    </form>
  </div>
</body>

</html>
